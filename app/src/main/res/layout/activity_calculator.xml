<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    tools:context=".Calculator">

    <!-- 文本框  -->
    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textSize="30dp"
        android:editable="false"
        android:gravity="right" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="0,1,2,3">

        <TableRow android:layout_weight="1">
            <Button
                android:id="@+id/btn_UN"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:textSize="25dp"
                android:text="负"
                android:onClick="doClick"
                android:backgroundTint="#bacac6"/>
            <Button
                android:id="@+id/btn_AC"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:textSize="20dp"
                android:onClick="doClick"
                android:backgroundTint="#bacac6"
                android:text="AC" />
            <Button
                android:id="@+id/btn_DEL"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:textSize="20dp"
                android:onClick="doClick"
                android:backgroundTint="#bacac6"
                android:text="Del" />
            <Button
                android:id="@+id/btn_GEN"
                android:layout_height="match_parent"
                android:textSize="30dp"
                android:onClick="doClick"
                android:backgroundTint="#bacac6"
                android:text="√" />
        </TableRow>
        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/btn1"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:textSize="30dp"
                android:onClick="doClick"
                android:backgroundTint="#bacac6"
                android:text="7" />

            <Button
                android:id="@+id/btn2"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:textSize="30dp"
                android:onClick="doClick"
                android:backgroundTint="#bacac6"
                android:text="8" />

            <Button
                android:id="@+id/btn3"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:textSize="30dp"
                android:onClick="doClick"
                android:backgroundTint="#bacac6"
                android:text="9" />

            <Button
                android:id="@+id/btn4"
                android:layout_height="match_parent"
                android:textSize="30dp"
                android:onClick="doClick"
                android:backgroundTint="#bacac6"
                android:text="/" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/btn5"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:textSize="30dp"
                android:onClick="doClick"
                android:backgroundTint="#bacac6"
                android:text="4" />

            <Button
                android:id="@+id/btn6"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:textSize="30dp"
                android:onClick="doClick"
                android:backgroundTint="#bacac6"
                android:text="5" />

            <Button
                android:id="@+id/btn7"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:textSize="30dp"
                android:onClick="doClick"
                android:backgroundTint="#bacac6"
                android:text="6" />

            <Button
                android:id="@+id/btn8"
                android:layout_height="match_parent"
                android:textSize="30dp"
                android:onClick="doClick"
                android:backgroundTint="#bacac6"
                android:text="*" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/btn9"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:textSize="30dp"
                android:onClick="doClick"
                android:backgroundTint="#bacac6"
                android:text="1" />

            <Button
                android:id="@+id/btn10"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:textSize="30dp"
                android:onClick="doClick"
                android:backgroundTint="#bacac6"
                android:text="2" />

            <Button
                android:id="@+id/btn11"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:textSize="30dp"
                android:onClick="doClick"
                android:backgroundTint="#bacac6"
                android:text="3" />

            <Button
                android:id="@+id/btn12"
                android:layout_height="match_parent"
                android:textSize="30dp"
                android:onClick="doClick"
                android:backgroundTint="#bacac6"
                android:text="-" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/btn13"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:textSize="30dp"
                android:onClick="doClick"
                android:backgroundTint="#bacac6"
                android:text="." />

            <Button
                android:id="@+id/btn14"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:textSize="30dp"
                android:onClick="doClick"
                android:backgroundTint="#bacac6"
                android:text="0" />

            <Button
                android:id="@+id/btn15"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:textSize="30dp"
                android:onClick="doClick"
                android:backgroundTint="#bacac6"
                android:text="=" />

            <Button
                android:id="@+id/btn16"
                android:layout_height="match_parent"
                android:textSize="30dp"
                android:onClick="doClick"
                android:backgroundTint="#bacac6"
                android:text="+" />
        </TableRow>
    </TableLayout>

</LinearLayout>
